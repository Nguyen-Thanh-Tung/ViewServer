doctype html
html
    head
        meta(charset='UTF-8')
        title AdminLTE 2 | Flot Charts
        // Tell the browser to be responsive to screen width
        meta(content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no', name='viewport')
        // Bootstrap 3.3.4
        link(href='/bootstrap/css/bootstrap.min.css', rel='stylesheet', type='text/css')
        // Font Awesome Icons
        link(href='/plugins/font-awesome/css/font-awesome.min.css', rel='stylesheet', type='text/css')
        // Ionicons
        link(href='/css/ionicons.min.css', rel='stylesheet', type='text/css')
        // Theme style
        link(href='/dist/css/AdminLTE.min.css', rel='stylesheet', type='text/css')
        // AdminLTE Skins. Choose a skin from the css/skins, folder instead of downloading all of them to reduce the load.
        link(href='/dist/css/skins/_all-skins.min.css', rel='stylesheet', type='text/css')
        link(href='/plugins/toastr/toastr.min.css', rel='stylesheet', type='text/css')
        style(type="text/css").
            #logInfor span{
                margin-right: 10px
            }
            option.active{
                background: red
            }
        // HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
        // WARNING: Respond.js doesn't work if you view the page via file://
        //if lt IE 9
          script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
          script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
        script.
    body.skin-blue.sidebar-mini(data-has-data='#{hasData}', data-server-id = '#{serverId}')
        .wrapper
            include ./components/header
            // Left side column. contains the logo and sidebar
            include components/leftSide
            // Content Wrapper. Contains page content
            .content-wrapper
                // Content Header (Page header)
                section.content-header
                    h1
                        | Server Information
                        small preview
                    ol.breadcrumb
                        li
                            a(href='#')
                                i.fa.fa-dashboard
                                |  Home
                        li
                            a(href='#') Charts
                        li.active Server Information
                // Main content
                section.content
                    // Log
                    .row
                        .col-sm-9.col-xs-12
                            // interactive chart
                            .box.box-primary
                                .box-header.with-border
                                    h3.box-title Log Information
                                    .box-tools.pull-right
                                        div
                                            #stop.btn-group(data-toggle='btn-toggle', style='margin-right: 15px')
                                                button.btn.btn-default.btn-xs(type='button', data-toggle='on') Start
                                                button.btn.btn-default.btn-xs.active(type='button', data-toggle='off') Stop
                                            | EPS:
                                            b
                                                span#eps 0
                                .box-body
                                    #logInfor(style='height: 200px;background-color: black; overflow-y: scroll;color: white; padding: 10px; font-size: 16px;')
                        .col-sm-3.col-xs-12
                            // interactive chart
                            .box.box-primary
                                .box-header.with-border
                                    h3.box-title Server
                                    .box-tools.pull-right
                                .box-body
                                    div(style='height: 200px;')
                                        .form-group
                                            label(for='sel1') Server Tick
                                            select#sel1.form-control(multiple='', style='height: 175px')
                                                - each server, i in serverList
                                                    option(data-server-id='#{server.id}') #{server.server_name}
                    .row
                        .col-xs-12
                            // interactive chart
                            .box.box-primary
                                .box-header.with-border
                                    i.fa.fa-bar-chart-o
                                    h3.box-title Interactive Area Chart
                                .box-body
                                    #interactive(style='height: 300px;')
                    .row
                        .col-xs-8
                            // Line chart
                            .box.box-primary
                                .box-header.with-border
                                    i.fa.fa-bar-chart-o
                                    h3.box-title Response Time
                                    .box-tools.pull-right
                                        button.btn.btn-box-tool(data-widget='collapse')
                                            i.fa.fa-minus
                                        button.btn.btn-box-tool(data-widget='remove')
                                            i.fa.fa-times
                                .box-body
                                    #line-chart(style='height: 200px', data-response-time = '#{responseTime}')
                        .col-xs-4
                            // Bar chart
                            .box.box-primary
                                .box-header.with-border
                                    i.fa.fa-bar-chart-o
                                    h3.box-title Error/Acess
                                    .box-tools.pull-right
                                        button.btn.btn-box-tool(data-widget='collapse')
                                            i.fa.fa-minus
                                        button.btn.btn-box-tool(data-widget='remove')
                                            i.fa.fa-times
                                .box-body
                                    #donut-chart2(style='height: 200px;', data-rate-error='#{rateError}')
            include ./components/footer
            // Control Sidebar
            include ./components/controlSide
            .control-sidebar-bg

        // jQuery 2.1.4
        script(src='/plugins/jQuery/jQuery-2.1.4.min.js', type='text/javascript')
        // Bootstrap 3.3.2 JS
        script(src='/bootstrap/js/bootstrap.min.js', type='text/javascript')
        // FastClick
        script(src='/plugins/fastclick/fastclick.min.js', type='text/javascript')
        // AdminLTE App
        script(src='/dist/js/app.min.js', type='text/javascript')
        // AdminLTE for demo purposes
        script(src='/dist/js/demo.js', type='text/javascript')
        // FLOT CHARTS
        script(src='/plugins/flot/jquery.flot.min.js', type='text/javascript')
        // FLOT RESIZE PLUGIN - allows the chart to redraw when the window is resized
        script(src='/plugins/flot/jquery.flot.resize.min.js', type='text/javascript')
        // FLOT PIE PLUGIN - also used to draw donut charts
        script(src='/plugins/flot/jquery.flot.pie.min.js', type='text/javascript')
        // FLOT CATEGORIES PLUGIN - Used to draw bar charts
        script(src='/plugins/flot/jquery.flot.categories.min.js', type='text/javascript')

        // Page script
        //script(src='/dist/bundle.js', type='text/javascript')
        script(src='/plugins/toastr/toastr.min.js', type='text/javascript')
        script(src='/javascripts/index.js', type='text/javascript')
        if serverId == '0'
            script(src='/javascripts/flot.js', type='text/javascript')
        else
            script(src='/javascripts/flott.js', type='text/javascript')

